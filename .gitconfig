[alias]
    co = checkout
    ci = !git add --all && git commit -S -a -v -s
    lg = log --graph --date-order -C -M --pretty=format:'%Cred%h%Creset %C(yellow)%ad%Creset %Cgreen[%an]%Creset%C(magenta)%d%Creset %s' --all --date='format:%c'
    ll = log --graph --pretty=format:'%Cred%h%Creset%C(magenta)%d%Creset %s' --all
    cl = log --pretty='- %s'
    st = status -s
    d = difftool
    nb = checkout -b
    rb = branch -d
    punch = push --force
    sig = log --show-signature
[core]
    editor = nvim
    autocrlf = input
    savecrlf = true
    excludesfile = ~/.gitignore_global
    pager = delta
[user]
    name = Mario Guenterberg
    email = mario.guenterberg@zalando.de
    signingkey = 96CD7275
[color]
    ui = auto
[color "branch"]
    current = cyan bold reverse
    local = white
    plain =
    remote = cyan
[color "diff"]
    commit =
    func = cyan
    plain =
    whitespace = magenta reverse
    meta = white
    frag = cyan bold reverse
    old = red
    new = green
[color "grep"]
    context =
    filename =
    function =
    linenumber = white
    match =
    selected =
    separator =
[color "interactive"]
    error =
    header =
    help =
    prompt =
[color "status"]
    added = green
    changed = yellow
    header =
    localBranch =
    nobranch =
    remoteBranch = cyan bold
    unmerged = magenta bold reverse
    untracked = red
    updated = green bold
[push]
    default = simple
[commit]
    template = ~/.gitmessage
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[web]
    browser = open
[pull]
	rebase = false
[init]
	defaultBranch = main
[diff]
    tool = vimdiff3
    colorMoved = default
[difftool "vimdiff3"]
	path = nvim
[merge]
    tool = vimdiff3
    conflictstyle = diff3
[mergetool "vimdiff3"]
    path = nvim
[interactive]
    diffFilter = delta --color-only  --features=interactive
[delta]
    navigate = true
    features = decorations
    side-by-side = true
    line-numbers = true
    syntax-theme = gruvbox-dark
[delta "interactive"]
    keep-plus-minus-markers = true
[delta "decorations"]
    commit-style = raw
    file-style = omit
    hunk-header-style = file line-number syntax
[credential "https://github.bus.zalan.do"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
